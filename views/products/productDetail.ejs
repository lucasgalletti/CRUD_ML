<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('../partials/head', {title}) %>

<body>
	<!-- Header -->
	<%- include('../partials/headerNavbar') %>
	<!-- /Header -->

	<!-- product detail -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Detalle del producto: <%= product.name %></h2>
			</div>
		</div>
		<div class="product-detail">
			<div class="row">
				<div class="col-12 col-lg-8">
					<img src="/images/products/<%= prodCatRoute + product.image %>" alt="product image" class="product-detail-img">
					<p class="product-detail-description">
						<%= product.description %>
					</p>
				</div>
				<div class="col-12 col-lg-4">
					<article class="product-detail-info">
						<h2 class="product-detail-title"><%= product.name %></h2>
						<p class="product-detail-price">
							$ <%= product.price %>
						</p>						
							<p class="product-detail-price small">
								<span>$ <%= product.price %></span>
								/
								<b><%= product.discount %> % OFF</b>
								<b>($ <%= product.price * (product.discount/100) %>)</b>
							</p>
							<p class="product-detail-price">
								$ <%= finalPrice %>
							</p>


						<ul class="actions-list">
							<li>
								<i class="fas fa-credit-card"></i>
								<p>Pag치 en 12 cuotas sin interes</p>
							</li>
							<li>
								<i class="fas fa-store"></i>
								<p>Retiro gratis en locales del vendedor</p>
							</li>
						</ul>
					<div class="button-buy">
						<a href="#" class="buy-now-button">COMPRAR AHORA</a>
						<hr>
					</div>
					<div class="button-buy">
						<a href="/products/<%= product.id %>/update" class="action-button edit">EDITAR PRODUCTO</a>
						<form action="/products/<%= product.id %>/delete?_method=delete" method="POST" style="display: inline-flex" id="formDelete">
							<button id="delProd" type="submit" class="action-button delete">ELIMINAR</button>
						</form>
					</div>
					</article>
				</div>
			</div>
		</div>
	</div>

	<!-- /product detail -->
	<script>

		const btnDel = document.getElementById('delProd');
		const formDel = document.getElementById('formDelete');
		
		btnDel.addEventListener('click', function(e){
			e.preventDefault();
		
			Swal.fire({
			title: 'Est치s Seguro?',
			text: "No hay vuelta atr치s!!",
			icon: 'warning',
			showCancelButton: true,
			confirmButtonColor: '#3085d6',
			cancelButtonColor: '#d33',
			confirmButtonText: 'Dale nom치s!!'
			}).then((result) => {
				if (result.isConfirmed) {
					formDel.submit();		
				}
			})
		})
		
		</script>
	<!-- footer -->
	<%- include('../partials/footer') %>
	<!-- /footer -->

</body>	
</html>