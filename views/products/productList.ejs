<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('../partials/head', {title: title}) %>

<body>
  <!-- Header -->
  <%- include('../partials/headerNavbar') %>
  <!-- /Header -->

  <!-- todos los productos -->
  <div class="container products-wrapper">
    <div class="row">
      <div class="col-12">
        <h2 class="products-title">Todos los productos</h2>
      </div>

      <% productos.forEach(producto=> { 
		let prodCatRoute = '';
			if(producto.category == 'in-sale'){
				 prodCatRoute = 'inSale/';
			}else{
				prodCatRoute = 'visited/';
			}
		%>

      <div class="col-12 col-sm-6 col-lg-3">
     <section class="product-box">
          <a href="/products/<%= producto.id %>/detail/">
            <figure class="product-box_image">
              <img src="/images/products/<%= prodCatRoute + producto.image %>" alt="imagen de producto">
            </figure>
            <article class="product-box_data">
              <h2>$<%= producto.price %>
              </h2>
              <span>
                <%= producto.discount %> % OFF
              </span>
              <p>
                <%= producto.name %>
              </p>
              <i class="fas fa-truck"></i>
            </article>
          </a>
        </section>
      </div>
      <% }) %>
    </div>
  </div>
  <!-- /todos los productos -->

  <!-- footer -->
  <%- include('../partials/footer') %>
  <!-- /footer -->
</body>

</html>